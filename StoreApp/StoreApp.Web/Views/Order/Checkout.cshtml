@model OrderModel

<h1>CheckOut</h1>

<hr>

<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Sipariş Detayı</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" asp-action="CheckOut">
            <div class="mb-3">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control" />
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="@Model.City"></label>
                    <input asp-for="@Model.City" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="@Model.Phone"></label>
                    <input asp-for="@Model.Phone" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="mb-3">
                    <label asp-for="@Model.Address"></label>
                    <textarea asp-for="@Model.Address" class="form-control"> </textarea>
                </div>

            </div>
            <button type="submit" class="btn btn-primary">Siparişi Tamamla</button>
        </form>
    </div>
    <div class="col-md-4">
        <h4 class="mb-3">Sipariş Özeti</h4>
        <ul class="list-group mb-3">

            @foreach(var item in Model.Cart.Items)
            {
            <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                    <h6 >@item.Product.Name X @item.Quantity</h6> 
                </div>
                <span>@item.Product.Price.ToString("c")</span>
            </li>


            }
            <li class="list-group-item d-flex justify-content-between lh-condensed">

                <span>Toplam:  </span>
                <strong>@Math.Truncate(Model.Cart.CalculateTotal()).ToString("c")</strong>
            </li>
        </ul>
    </div>


</div>