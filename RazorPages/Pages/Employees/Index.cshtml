@page
@model IndexModel

@{
ViewData["Title"] = "Employees";
}
<h1>Employees</h1>
<div class="row">
    @foreach (var employee in Model.EmployeesList)
    {
    <div class="col-md-3 mb-2">
        <div class="card">
            <img src="~/img/@employee.Photo" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@employee.EmployeeName</h5>
                <p class="card-text">@employee.Email</p>
                <p class="card-text">@employee.Department</p>
                <a asp-page="Details" asp-route-id="@employee.EmployeeId" class="btn btn-primary">Details</a>
                <a asp-page="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-primary">Edit</a>
            </div>

        </div>
    </div>
    }
</div>