@model User

<div class="row">
    <div class="col-md-2">
        <div class="bg-white p-2">
            
            <img src="/img/@Model.PostImage" class="img-fluid">
        </div>
    </div>
    <div class="col-md-10">
        <div class="bg-white p-2">
            <h5>@Model.UserName</h5>
            <hr>
            <div id="posts">
                <h5 class="my-4">Yayınlananan Gönderiler</h5>
                <ul class="list-group">
                    @foreach (var post in Model.Posts)
                    {
                        <li class="list-group-item"><i class="bi bi-caret-right-fill"></i><a href="/Posts/Details/@post.Url">@post.Title</a></li>
                    }
                </ul>
            </div>
            <div id="comments">
                <h5 class="my-4">Yapılan Yorumlar</h5>
                <ul class="list-group">
                    @foreach (var comment in Model.Comments)
                    {
                        <li class="list-group-item"><i class="bi bi-chat-right-text-fill"></i> @comment.CommentText<i>- <a href="/Posts/Details/@comment.Post.Url">[@comment.Post.Title]</a></i></li>
                    }
                </ul>
            </div>

        </div>
    </div>
</div>