@model PostsViewModel

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">Popüler Posts</h1>
            @foreach (var post in Model.Posts)
            {
            <div class="card bg-transparent border-0 mb-3 ">
                <div class="row">
                    <div class="col-4">
                        <img src="~/img/@post.PostImage" class="img-fluid rounded" alt="">

                    </div>
                    <div class="col-8">
                        <h5 class="h5">
                            <a href="/Posts/Details/@post.Url" class="btn-link fw-bold">@post.Title</a>
                        </h5>
                        <p>@post.Description</p>
                        <p>
                            <a href="#" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold">Web</a>
                    </div>
                </div>
            </div>
            <hr class="my-3">

            }
            <nav>
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#">Önceki</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">Sonraki</a>
                    </li>
            </nav>
        </div>
    </div>
    <div class="col-lg-4">

        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>

    </div>
</div>