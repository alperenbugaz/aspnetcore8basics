@model Course

        <div class="card mb-3" id="kurs_@Model.Id">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/img/@Model.Image" class="img-fluid rounded-start" alt="">
                </div>

            </div>
            <div class="col-md-8">
                <div class="card-body">
                    
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>
        </div>
