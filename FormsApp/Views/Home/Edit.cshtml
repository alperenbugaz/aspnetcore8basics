@model Product
@{
    ViewData["Title"] = "Edit";
}

<form  asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductId">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control">
        <span asp-validation-for="Price"></span>

    </div>
    <div class="input-group mb-3">
        <input type="file" name="imageFile" id="imageFile" class="form-control">

    </div>
    <div>
        <img src="/img/@Model.imageFile" style="width: 100px;">
        <input type="hidden" asp-for="@Model.imageFile">

    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select  asp-for="CategoryId"class="form-select" asp-items="ViewBag.Categories">
        <option value="">Hepsi</option>
        </select>
        <span asp-validation-for="CategoryId"></span>

    </div>
    <div class="mb-3  form-check">
        <input asp-for="IsAvailable" class="form-check-input">
        <label asp-for="IsAvailable" class="form-label"></label>

    </div>

    <button class="btn btn-primary" type="submit">Kaydet</button>

</form>