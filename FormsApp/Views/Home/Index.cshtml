@model ProductViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="card card-body my-3">

    <form asp-action="Index" method="get">
        <div class="row">
            <div class="col-md-11">
                <select name="category" class="form-select" asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name",Model.SelectedCategory))">
                    <option value="0">Hepsi</option>
                </select>
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary">Filtrele</button>
            </div>
        </div>
        
    </form>


</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m=>m.Products[0].ProductId)</th>
            <th>@Html.DisplayNameFor(m=>m.Products[0].imageFile)</th>
            <th>@Html.DisplayNameFor(m=>m.Products[0].Name)</th>

            <th>@Html.DisplayNameFor(m=>m.Products[0].Price)</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td style="width: 100px;">@item.ProductId</td>
                    <td style="width: 100px;"><img src="/img/@item.imageFile" class="img-fluid" width="100" height="100" /></td>
                    <td>@item.Name</td>
                    <td style="width: 100px;">@item.Price</td>
                    <td style="width: 130px;">
                        <a href="/Home/Edit/@item.ProductId" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/Home/Delete/@item.ProductId" class="btn btn-sm btn-danger">Delete</a>

                    </td>
                </tr>
            }
    </tbody>

</table>