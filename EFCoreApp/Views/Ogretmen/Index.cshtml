@model IEnumerable<Ogretmen>

<h2>Öğrenci Ekle</h2>
<hr>
<a href="/Ogretmen/Create" class="btn btn-primary">Yeni Öğretmen Ekle</a>
<hr>

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.OgretmenId)</th>
            <th>@Html.DisplayNameFor(m => m.Ad)</th>
            <th>@Html.DisplayNameFor(m => m.Soyad)</th>
            <th style="width: 150px;"> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem =>item.OgretmenId)</td>
                <td>@Html.DisplayFor(modelItem =>item.Ad)</td>
                <td>@Html.DisplayFor(modelItem =>item.Soyad)</td>
                <td>
                    <a asp-controller="Ogretmen" asp-action="Edit" asp-route-id="@item.OgretmenId" class="btn btn-sm btn-primary" type="submit">Edit</a>
                    <button onclick="confirmDelete('@item.OgretmenId')" class="btn btn-sm btn-danger">Sil</button>              
                </td>

            </tr>
        }
</table>
@section Scripts {
    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: "Silmek istediğinizden emin misiniz?",
                text: "Bu işlem geri alınamaz!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Evet, sil",
                cancelButtonText: "İptal"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/Ogretmen/Delete/${id}`;
                }
            });
        }
    </script>
}