@model IEnumerable<KursKayit>

<h2>Öğrenci Listesi</h2>
<hr>
<a href="/KursKayit/Create" class="btn btn-primary">Kurs Kaydı Oluştur</a>
<hr>

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m =>m.KursKayitId)</th>
            <th style="width: 150px;">@Html.DisplayNameFor(m =>m.Ogrenci.OgrenciAd)</th>
            <th style="width: 150px;">@Html.DisplayNameFor(m =>m.Kurs.Baslik)</th>
            <th style="width: 150px;">@Html.DisplayNameFor(m =>m.KayitTarihi)</th>
            <th style="width: 150px;"></th>

        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.KursKayitId)</td>
                <td>@Html.DisplayFor(modelItem => item.Ogrenci.OgrenciAd)</td>
                <td>@Html.DisplayFor(modelItem => item.Kurs.Baslik)</td>
                <td>@Html.DisplayFor(modelItem => item.KayitTarihi)</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.OgrenciId">Edit</a> 
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.OgrenciId">Delete</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: "Silmek istediğinizden emin misiniz?",
                text: "Bu işlem geri alınamaz!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Evet, sil",
                cancelButtonText: "İptal"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/KursKayit/Delete/${id}`;
                }
            });
        }
    </script>
}