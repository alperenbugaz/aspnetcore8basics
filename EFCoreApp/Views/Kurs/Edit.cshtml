@model Kurs

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-8">
        <form asp-controller="Kurs" asp-action="Edit" method="post"> 
            <input type="hidden" asp-for="KursId">
        
            <div class="mb-3">
                <label asp-for="Baslik" class="form-label">Kurs Başlığı</label>
                <input asp-for="Baslik" type="text" class="form-control">
            </div>
        
            <div class="mb-3">
                <label asp-for="KursAciklama" class="form-label">Kurs Açıklaması</label>
                <input asp-for="KursAciklama" type="text" class="form-control">
            </div>
        
            <div class="mb-3">
                <label asp-for="KursUcret" class="form-label">Kurs Ücreti</label>
                <input asp-for="KursUcret" type="text" class="form-control">
            </div>

            <div class="mb-3">
                <label asp-for="OgretmenId" class="form-label">Öğretmen</label>
                <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler"class="form-select"> 
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="OgretmenId"></span>
        
            </div>
        
            <button type="submit" class="btn btn-secondary">Kaydet</button>
        </form> </div>
    <div class="col-4">
        <h4>Öğrenciler</h4>
        <hr>
        <ul>
            @foreach (var item in Model.KursKayitlari)
            {
                <li>@item.Ogrenci.AdSoyad</li>
            }
        </ul>
    </div>
    
</div>

