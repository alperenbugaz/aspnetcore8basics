@model Ogrenci

@{
    ViewData["Title"] = "Create";
}
<form asp-controller="Ogrenci" asp-action="Create" method="post"> 
    <div class="mb-3">
        <label asp-for="OgrenciAd" class="form-label">Ad</label>
        <input asp-for="OgrenciAd" type="text" class="form-control">
        <span asp-validation-for="OgrenciAd"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OgrenciSoyad" class="form-label">Soyad</label>
        <input asp-for="OgrenciSoyad" type="text" class="form-control">
        <span asp-validation-for="OgrenciSoyad"></span>

    </div>

    <div class="mb-3">
        <label asp-for="EMail" class="form-label">E-Mail</label>
        <input asp-for="EMail" type="text" class="form-control">
        <span asp-validation-for="EMail"></span>

    </div>

    <div class="mb-3">
        <label asp-for="Telefon" class="form-label">Telefon</label>
        <input asp-for="Telefon" type="text" class="form-control">
        <span asp-validation-for="Telefon"></span>

    </div>
    <button type="submit" class="btn btn-secondary">Kaydet</button>
</form>